<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/CustomButton</item>
        <item name="android:actionBarStyle">@style/customActionBar</item>
        <item name="android:textViewStyle">@style/customTextView</item>
        <item name="android:colorBackground">@color/colorLiteGreenBackground</item>
        <item name="android:screenOrientation">portrait</item>

    </style>

    <style name="MyTheme" parent="android:Theme.Holo.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:textColorPrimary">@color/colorGreen</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:textColor">@color/colorGreen</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20sp</item>
    </style>


</resources>